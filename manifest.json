{
  "manifest_version": 3,
  "name": "MSISDN to ICCID Lookup",
  "version": "1.0",
  "description": "Batch lookup MSISDN to ICCID on supported pages.",
  "icons": {
    "16": "icon16.png"
  },
  "action": {
    "default_title": "Run MSISDN â†’ ICCID Lookup"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"]
}
